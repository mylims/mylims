{
  "include": ["**/*"],
  "exclude": ["node_modules", "build"],
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": false,
    "resolveJsonModule": true,
    "paths": {
      "App/*": ["./app/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"],
      "Providers/*": ["./providers/*"]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/auth",
      "@adonisjs/session",
      "@zakodium/adonis-mongodb",
      "node"
    ],
    "lib": ["ES2019.Array"]
  }
}
