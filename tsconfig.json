{
  "include": ["**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "outDir": "build",
    "rootDir": "./",
    "baseUrl": "./",
    "skipLibCheck": true,
    "incremental": true,
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "lib": ["ES2020"],
    "paths": {
      "App/*": ["./app/*"],
      "Contracts/*": ["./contracts/*"]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/auth",
      "@adonisjs/session",
      "@adonisjs/view",
      "@types/jest",
      "@zakodium/adonis-mongodb",
      "node"
    ]
  }
}
