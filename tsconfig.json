{
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "addons"
  ],
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/auth",
      "@adonisjs/session",
      "@zakodium/adonis-mongodb"
    ],
    "lib": [
      "ES2019.Array"
    ]
  }
}